{
    "license": "AGPL-3.0-or-later",
    "scripts": {
        "build": "spago --jobs 10 build --purs-args '--codegen js,sourcemaps --verbose-errors'",
        "rebuild": "clear; yarn clean; yarn build",
        "keep-building": "spago --jobs 10 build --watch --clear-screen --purs-args '--codegen js,sourcemaps --verbose-errors'",
        "develop-purs":  "spago --jobs 10 build --watch --clear-screen --purs-args '--codegen js,sourcemaps --verbose-errors'",
        "develop-app": "parcel --host 0.0.0.0 --out-dir ./output.parcel ./src/html/index.html ./output",
        "go":          "parcel --host 0.0.0.0 --out-dir ./output.parcel ./src/html/index.html ./output",
        "verify": "yarn clean && spago verify-set",
        "docs": "spago docs --open",
        "clean": "while read gitIgnorePattern; do rm -rf .${gitIgnorePattern}; done < .gitignore"
    },
    "engines": {
        "yarn": "1.22.10"
    },
    "devDependencies": {
        "sass": "1.32.8"
    },
    "dependencies": {
        "parcel-bundler": "1.12.5",
        "purescript": "0.14.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "spago": "0.20.0"
    }
}


